# ==============================================
# Docker Image Tags
# ==============================================
# Op-Reth image and tag
OP_RETH_IMAGE=ghcr.io/paradigmxyz/op-reth
OP_RETH_TAG=latest

# Kona image and tag
KONA_IMAGE=ghcr.io/op-rs/kona/kona-node
KONA_TAG=latest

# Optional monitoring tags
# PROMETHEUS_TAG=latest
# GRAFANA_TAG=latest

# ==============================================
# L1 Configuration (REQUIRED)
# ==============================================
# L1 Execution Layer RPC endpoint
L1_PROVIDER_RPC=https://ethereum-sepolia-rpc.publicnode.com

# L1 Beacon API endpoint
L1_BEACON_API=https://ethereum-sepolia-beacon-api.publicnode.com

# ==============================================
# Chain Configuration
# ==============================================
# Chain to sync (optimism, optimism-sepolia, base, base-sepolia, etc.)
OP_RETH_CHAIN=optimism-sepolia
KONA_CHAIN=optimism-sepolia

# Sequencer HTTP endpoint
OP_RETH_SEQUENCER_HTTP=https://sepolia-sequencer.optimism.io/

# ==============================================
# Op-Reth Port Configuration
# ==============================================
OP_RETH_METRICS_PORT=9001
OP_RETH_DISCOVERY_PORT=30303
OP_RETH_RPC_PORT=8545
OP_RETH_ENGINE_PORT=8551

# ==============================================
# Kona Port Configuration
# ==============================================
KONA_DISCOVERY_PORT=9223
KONA_METRICS_PORT=9002
KONA_RPC_PORT=5060

# ==============================================
# Logging Configuration
# ==============================================
# Op-Reth logging level
OP_RETH_RUST_LOG=info

# Kona logging level
# Example: engine_builder=trace,runtime=debug
KONA_RUST_LOG=info

# ==============================================
# Optional Monitoring Ports
# ==============================================
# PROMETHEUS_PORT=9091  # Changed from 9090 to avoid conflicts
# GRAFANA_PORT=3001     # Changed from 3000 to avoid conflicts
# PROMETHEUS_URL=http://prometheus:9090

